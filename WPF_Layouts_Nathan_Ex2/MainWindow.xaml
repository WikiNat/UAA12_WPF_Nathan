<Window x:Class="WPF_Layouts_Nathan_Ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layouts_Nathan_Ex2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Margin="8,51,9,2" Grid.RowSpan="5" Grid.ColumnSpan="4">
            <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2">
                
            </WrapPanel>
            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="1" Width="50" Height="50" Margin="5"/>
                <Button Content="4" Width="50" Height="50" Margin="5"/>
                <Button Content="7" Width="50" Height="50" Margin="5"/>
                <Button Content=" , " Width="50" Height="50" Margin="5"/>
            </WrapPanel>
            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="2" Width="50" Height="50" Margin="5"/>
                <Button Content="5" Width="50" Height="50" Margin="5"/>
                <Button Content="8" Width="50" Height="50" Margin="5"/>
                <Button Content=" 0 " Width="50" Height="50" Margin="5"/>
            </WrapPanel>
            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="3" Width="50" Height="50" Margin="5"/>
                <Button Content="6" Width="50" Height="50" Margin="5"/>
                <Button Content="9" Width="50" Height="50" Margin="5"/>
                <Button Content=" * " Width="50" Height="50" Margin="5"/>
            </WrapPanel>
            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="C" Width="50" Height="50" Margin="5"/>
                <Button Content="+" Width="50" Height="50" Margin="5"/>
                <Button Content="-" Width="50" Height="50" Margin="5"/>
                <Button Content="/" Width="50" Height="50" Margin="5"/>
                <Button Content="=" Width="50" Height="50" Margin="5"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
