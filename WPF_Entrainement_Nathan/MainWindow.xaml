<Window x:Class="WPF_Entrainement_Nathan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Entrainement_Nathan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="UpLeft" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Foreground="Red"/>
        <Button Content="DownRight" Width="67" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" Foreground="Purple"/>
        <Button Content="DownLeft" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0" Foreground="Blue" />
        <Button Content="UpRight" Width="60" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Foreground="Green" />
    </Grid>

</Window>
