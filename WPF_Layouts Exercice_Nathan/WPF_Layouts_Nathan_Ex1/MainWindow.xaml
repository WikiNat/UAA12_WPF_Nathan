<Window x:Class="WPF_Layouts_Nathan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Layouts_Nathan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Button Content="Button 1" Width="400" Height="100"/>
            <Button Content="Button 2" Width="400" Height="100"/>
        </StackPanel>
        <DockPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button DockPanel.Dock="Top" Height="50" Width="400" >Top</Button>
            <Button DockPanel.Dock="Bottom" Height="50" Width="400">Bottom</Button>
            <Button DockPanel.Dock="Right" >Right</Button>
            <Button DockPanel.Dock="Left" >Left</Button>
            <Button Height="100">Direction</Button>
        </DockPanel>
        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="300" Height="150" Margin="20,0,0,0">
            <Button Content="Button 1" Width="100" Height="18"/>
            <Button Content="Button 2" Width="100" Height="18"/>
            <Button Content="Button 3" Width="100" Height="18"/>
            <Button Content="Button 4" Width="100" Height="80"/>
            <Button Content="Button 5" Width="100" Height="80"/>
            <Button Content="Button 6" Width="100" Height="80"/>
        </WrapPanel>
        <Canvas HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="300" Height="150" Margin="0,0,20,20">
            <Ellipse Width="200" Height="200" Fill="Black"
                 Canvas.Left="0" Canvas.Top="-50"/>
            <!-- Cercle blanc -->
            <Ellipse Width="150" Height="150" Fill="Yellow"
                 Canvas.Left="25" Canvas.Top="-24"/>
            <!-- Cercle bleu -->
            <Ellipse Width="90" Height="90" Fill="Red"
                 Canvas.Left="55" Canvas.Top="7"/>

        </Canvas>
    </Grid>
</Window>
